<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Customerinformation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Mustermann"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCustomerBalance"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="€20,00"
                        android:textColor="#4CAF50"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Zahlungsbereich -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="1dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:endIconMode="clear_text"
                        app:boxStrokeColor="#BDBDBD"
                        android:textColorHint="#BDBDBD">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPaymentAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Rechnungsbetrag (€)"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fälliger Restbetrag: "
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvRemainingAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendPayment"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Zahlung durchführen"
                        app:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:textAllCaps="false"
                        android:textSize="16sp" />

                    <!-- Zahlungsinformationen -->
                    <TextView
                        android:id="@+id/tvTodayPaymentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Heutige Zahlung:"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/tvTodayPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#212121"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvNewBalanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Neues Guthaben:"
                        android:textColor="#757575"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvNewBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#4CAF50"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>