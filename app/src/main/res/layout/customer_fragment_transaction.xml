<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <!-- Balance-Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktuelles Guthaben"
                        android:textColor="#757575"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvCustomerBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="€50,00"
                        android:textColor="#4CAF50"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Rechnungsbetrag"
                        android:textColor="#757575"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvInvoiceAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="€65,00"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Fälliger Restbetrag"
                        android:textColor="#757575"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvRemainingAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="€15,00"
                        android:textColor="#F44336"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payment area -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zahlbetrag festlegen"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <!-- Betragsauswahl Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmount1"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="+1€"
                            app:strokeColor="#4CAF50"
                            app:strokeWidth="1dp"
                            android:textColor="#4CAF50"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmount2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="+2€"
                            app:strokeColor="#4CAF50"
                            app:strokeWidth="1dp"
                            android:textColor="#4CAF50"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmount3"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="+3€"
                            app:strokeColor="#4CAF50"
                            app:strokeWidth="1dp"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>

                    <!-- Manual amount entry -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:endIconMode="clear_text"
                        app:boxStrokeColor="#BDBDBD"
                        android:textColorHint="#BDBDBD">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Anderer Betrag (€)"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Selected amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ausgewählter Betrag:"
                        android:textColor="#757575"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvSelectedAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="€0,00"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Zu bezahlender Betrag:"
                        android:textColor="#757575"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvAmountToPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="€0,00"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <!-- Send button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendPayment"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:text="Zahlung senden"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:backgroundTint="#4CAF50"
                        app:cornerRadius="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>