<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <!-- Home Tab -->
    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home"
            app:tint="#808080"/>

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Connect Tab -->
    <LinearLayout
        android:id="@+id/connect_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/connect_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_connect"
            app:tint="#808080"/>

        <TextView
            android:id="@+id/connect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koppeln"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Transactions Tab -->
    <LinearLayout
        android:id="@+id/transactions_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/transactions_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_transactions"
            app:tint="#808080"/>

        <TextView
            android:id="@+id/transactions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaktionen"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Wallet Tab -->
    <LinearLayout
        android:id="@+id/wallet_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/wallet_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_wallet"
            app:tint="#808080"/>

        <TextView
            android:id="@+id/wallet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verlauf"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>