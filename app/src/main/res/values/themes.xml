<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Standard Theme -->
    <style name="Theme.WechselgeldApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Farben -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Statusbar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Alternative: Ohne ActionBar (fÃ¼r Custom Toolbars) -->
    <style name="Theme.WechselgeldApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Farben kannst du wiederholen oder hier weglassen, wenn von oben geerbt -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Optionales Verhalten -->
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

</resources>
